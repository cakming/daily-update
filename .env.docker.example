# Docker Compose Environment Configuration
# Copy this to .env and update with your actual values

#=============================================================================
# MONGODB CONFIGURATION
#=============================================================================
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=CHANGE_ME_IN_PRODUCTION_12345
MONGO_PORT=27017
MONGO_INITDB_DATABASE=daily-update

#=============================================================================
# BACKEND CONFIGURATION
#=============================================================================
# Server
NODE_ENV=production
BACKEND_PORT=5000

# JWT Authentication
JWT_SECRET=GENERATE_RANDOM_SECRET_USE_openssl_rand_-hex_64
JWT_EXPIRE=30d

# Database (used by backend container)
MONGODB_URI=mongodb://admin:CHANGE_ME_IN_PRODUCTION_12345@mongodb:27017/daily-update?authSource=admin

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:3000

#=============================================================================
# ANTHROPIC AI
#=============================================================================
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

#=============================================================================
# EMAIL CONFIGURATION (SMTP)
#=============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Daily Update

#=============================================================================
# TELEGRAM BOT (Optional)
#=============================================================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

#=============================================================================
# GOOGLE CHAT (Optional)
#=============================================================================
GOOGLE_CHAT_WEBHOOK_URL=your-google-chat-webhook-url

#=============================================================================
# ERROR TRACKING (Optional but Recommended)
#=============================================================================
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=production

#=============================================================================
# FRONTEND CONFIGURATION
#=============================================================================
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:5000/api

#=============================================================================
# PRODUCTION DEPLOYMENT NOTES
#=============================================================================
# 1. Generate secure JWT_SECRET:
#    openssl rand -hex 64
#
# 2. Use strong MongoDB password:
#    openssl rand -base64 32
#
# 3. For production, update URLs:
#    CLIENT_URL=https://yourdomain.com
#    VITE_API_URL=https://api.yourdomain.com/api
#
# 4. Enable HTTPS in docker-compose.yml or use reverse proxy
#
# 5. Configure backup schedules for MongoDB
#
# 6. Set up monitoring and alerting
